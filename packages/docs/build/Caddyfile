www.petboarding.app {
  @webp path *.webp
  header @webp Cache-Control "public, max-age=31536000, immutable"
  encode zstd gzip
  handle_path /* {
    root * /srv/www.petboarding.app
    try_files {path}.html {path} /404.html
    file_server
  }
  handle / {
    root * /srv/www.petboarding.app
    try_files index.html
    file_server
  }
}